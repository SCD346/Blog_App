extends layout

block content
	h1 Create a user account to start blogging!
	form(name="user-form", id='form-user', action="/users/new", method="post")
		div.input
			span.label User ID
			input(type="text", id='ID-user', name="userId")
		div.input
			span.label User Name
			input(type="text", id='userName-user', name="userName")
		div.input
			span.label eMail
			input(type="text", id='email-user', name="email")
		div.actions
			input(type="submit", value="Create an account!")